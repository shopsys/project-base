{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}- {{ 'Transfer issues overview'|trans }}{% endblock %}
{% block h1 %}{{ 'Transfer issues overview'|trans }}{% endblock %}

{% block btn %}
    <div class="wrap-bar__buttons">
        <a href="{{ url('admin_default_dashboard') }}" class="btn wrap-bar__btn">
            {{ 'Back to dashboard'|trans }}
        </a>
    </div>
{% endblock %}

{% block main_content %}

    {{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="form-group wrap-border">
        <div class="form-group__title">
            {{ 'Search in transfers'|trans }}
        </div>

        {{ form_row(form.transfer, { label: 'Transfer type'|trans }) }}
        <div class="text-right margin-top-10">
            {{ form_widget(form.submit, { label: 'Search [verb]'|trans }) }}
        </div>
    </div>

    {{ form_end(form) }}

    {{ gridView.render() }}
{% endblock %}
